<div id="add_project">
  <img src="/images/icons/add.png" alt="" /> <%= link_to 'Add a Project', :controller => 'projects', :action => 'new' %>
</div>

<% unless @projects.blank? %>
  <% @projects.each_with_index do |project,index| %>
    <% if index % 2 == 0 %>
      <div class="row">
    <% end %>

    <%= render :partial => 'extended_project', :locals => { :project => project } %>
  
    <% if index % 2 == 1 || project == @projects.last%>
      </div>
    <% end %>
  <% end %>

  <%= render :partial => 'polling_script', :locals => { :projects => @projects, :system => @system } %>
<% else %>
  <p>You don't have any projects yet. <%= link_to 'Add one now', :controller => 'projects', :action => 'new' %></p>
<% end %>