<% @projects.each_with_index do |project,index| %>
  <% if index % 2 == 0 %>
    <div class="row">
  <% end %>

  <%= render :partial => 'extended_project', :locals => { :project => project } %>

  <% if index % 2 == 1 || project == @projects.last%>
    </div>
  <% end %>
<% end %>

<script type="text/javascript">
  <% @projects.each do |project| %>
    project_blocks.get_status(<%= project.id %>);
  <% end %>
</script>